@using EntityLayer;
@model List<Category>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class=" container col-md-11">
    <br />
    <h3>Kategoriler</h3>
    <hr />
    <br />



    <table class=" container col-md-12 table table-bordered table-striped table-hover table-dark">
        <thead>
            <tr>
             
                <th>Name</th>
                <th>Menu</th>
                <th>Image</th>
                <th>Detay</th>
                <th>Düzenle</th>
                <th>Sil</th>

            </tr>
        </thead>

        <tbody>


            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Gender.Name</td>
                    <td> <img src="@item.ImageUrl" width="35" height="35" /> </td>
                    <td><a href="/admin/CategoryDetail/@item.Id" class="btn btn-success">Detay</a></td>
                    <td><a href="/admin/UpdateCategories/@item.Id" class="btn btn-info">Güncelle</a></td>
                    <td><a href="/admin/DeleteCategory/@item.Id" class="btn btn-danger">Sil</a></td>
                </tr>
            }

        </tbody>

    </table>

    <a class="btn btn-primary" href="/admin/addcategory">Kategori Ekle</a>
</div>

