@using EntityLayer;
@model Gender
@{
    ViewData["Title"] = "UpdateMenu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-md-10 container">
    <br />
<h2>Menü Düzenle</h2>
<hr />
<br />

<div class="row">
    <div class="col-md-8">
            <form asp-controller="Admin" asp-action="UpdateMenu" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div style="margin-left:10px;" class="form-group row ml-2">
                <label asp-for="Name" class="col-sm-2 col-form-label">Menu Adı</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <br /> <br />
            </div>
           
            <div class="form-group row">
                <div class="col-sm-12 offset-sm-2">
                    <button style="margin-left:15px" type="submit" class="btn btn-outline-primary">Menu Güncelle</button>
                </div>

            </div>
        </form>
    </div>
</div>
</div>
