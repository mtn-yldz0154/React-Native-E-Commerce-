@using EntityLayer;
@model List<Product>
@{
    ViewData["Title"] = "CategoryDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <br />
    <h1> @ViewBag.ctg Detay</h1>
    <hr />
    <br />




    <div class="container mt-3">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card" style="width:300px;height:400px;margin-left:60px;">
                        <img class="card-img-top" src="@item.ImageUrl" alt="Card image" height="300" style="width:100%;height:300px;">
                        <div class="card-body">

                            <div class="mb-3">
                                <h6 class="card-title ml-3" style="color:darkslateblue;margin-left:22px;"><p style="display:inline;color:black;">Ürün Adı: </p>@item.Name</h6>
                                <h6 style="color:darkslateblue;margin-left:27px;">
                                    <p style="display:inline;color:black;">Kategori:</p>
                                    @ViewBag.ctg
                                </h6>

                                    <h6 style="color:darkslateblue;margin-left:27px;">
                                    <p style="display:inline;color:black;">Fiyat:</p>
                                    @item.Price TL
                                </h6>
                            </div>

                            <a href="/admin/ProductDetail/@item.Id" class="btn btn-info" style="margin-left:20px;">Detay</a>
                            <a href="/admin/UpdateProduct/@item.Id" class="btn btn-warning" style="margin-left:7px;">Düzenle</a>
                            <a href="/admin/DeleteProduct/@item.Id" class="btn btn-danger " style="margin-left:7px;">Kaldır</a>

                        </div>
                    </div>

                    <br>
                </div>
            }
        </div>
    </div>

</div>



