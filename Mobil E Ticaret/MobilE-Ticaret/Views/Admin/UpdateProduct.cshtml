@using EntityLayer;
@model Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<
<div class="col-md-10 container">
    <br />
    <h2>Ürün Ekle</h2>
    <hr />
    <br />

    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Admin" asp-action="UpdateProduct" method="POST">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div style="margin-left:10px;" class="form-group row ml-2">
                    <label asp-for="Name" class="col-sm-2 col-form-label">Ürün Adı</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br /> <br />
                </div>
                <div style="margin-left:10px;" class="form-group row ml-2">
                    <label asp-for="ImageUrl" class="col-sm-2 col-form-label">Resim</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="ImageUrl">
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <br /> <br />
                </div>
                <div style="margin-left:10px;" class="form-group row ml-2">
                    <label asp-for="Price" class="col-sm-2 col-form-label">Fiyat</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <br /> <br />
                </div>
                <div style="margin-left:10px;" class="form-group row ml-2">
                    <label asp-for="Description" class="col-sm-2 col-form-label">Açıklama</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <br /> <br />
                </div>
                <div style="margin-left:10px;" class="form-group row ml-2">
                    <label asp-for="CategoryId" class="col-sm-2 col-form-label">Kategori Seçiniz</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(i=>i.CategoryId,(List<SelectListItem>)ViewBag.Values,new{@class="form-control"})
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12 offset-sm-2">
                        <button type="submit" class="btn btn-outline-primary">Ürün Düzenle</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>