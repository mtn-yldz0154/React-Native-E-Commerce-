@using EntityLayer;
@model Category
@{
    ViewData["Title"] = "UpdateCategories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-10 container">
    <br />
    <h2>Kategori Düzenle</h2>
    <hr />
    <br />

    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Admin" asp-action="UpdateCategories" method="POST">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div style="margin-left:10px;" class="form-group row ml-2">
                    <label asp-for="Name" class="col-sm-2 col-form-label">Kategori Adı</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br /> <br />
                </div>
                <div style="margin-left:10px;" class="form-group row ml-2">
                    <label asp-for="ImageUrl" class="col-sm-2 col-form-label">Resim</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="ImageUrl">
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <br /> <br />
                </div>
                  <div style="margin-left:10px;" class="form-group row ml-2">
                    <label asp-for="GenderId" class="col-sm-2 col-form-label">Menu Seçiniz</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(i=>i.GenderId,(List<SelectListItem>)ViewBag.Values,new{@class="form-control"})
                    </div>
                </div> <br /> <br />
                <div class="form-group row">
                    <div class="col-sm-12 offset-sm-2">
                        <button style="margin-left:15px" type="submit" class="btn btn-outline-primary">Menu Güncelle</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
